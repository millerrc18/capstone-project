<div class="page-header">
  <div>
    <h1>Import period data</h1>
    <p class="subtle">Upload an .xlsx with headers. Rows will create or update periods for this contract.</p>
  </div>

  <div class="actions">
    <%= link_to "Back", contract_path(@contract), class: "btn" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="badge">Required headers</div>
    <p class="subtle" style="margin-top:10px;">
      Download template:
      <%= link_to "contract_workbook.xlsx", "/templates/contract_workbook.xlsx" %>
    </p>
    <ul class="subtle" style="margin-top:10px; padding-left: 18px;">
      <li>
        <strong><%= ContractWorkbookImporter::SHEET_PERIODS %>:</strong>
        <code><%= ContractWorkbookImporter::REQUIRED_PERIOD_HEADERS.join(", ") %></code>
      </li>
      <li>
        <strong><%= ContractWorkbookImporter::SHEET_MILESTONES %>:</strong>
        <code><%= ContractWorkbookImporter::REQUIRED_MILESTONE_HEADERS.join(", ") %></code>
      </li>
      <li>
        <strong><%= ContractWorkbookImporter::SHEET_UNITS %>:</strong>
        <code><%= ContractWorkbookImporter::REQUIRED_UNIT_HEADERS.join(", ") %></code>
      </li>
    </ul>

    <%= form_with url: contract_period_imports_path(@contract), scope: :period_import, local: true do |f| %>
      <label>.xlsx file</label>
      <%= f.file_field :file, accept: ".xlsx" %>

      <div class="form-actions">
        <%= f.submit "Import", class: "btn btn-primary" %>
        <%= link_to "Cancel", contract_path(@contract), class: "btn" %>
      </div>
    <% end %>
  </div>

  <% if defined?(@errors) && @errors.present? %>
    <div class="card-body">
      <div class="flash alert">
        <strong>Problems found:</strong>
        <ul style="margin: 10px 0 0; padding-left: 18px;">
          <% @errors.each do |e| %>
            <li><%= e %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
